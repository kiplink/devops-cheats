# list images
docker images

# menjalankan container
docker run -d --name <some name> [OPTIONS] <some image>

OPTIONS:
    -p <external port>:<internal port>
    -e <some environment>
    -v <local path>:<container path>

example:
docker run -d --name postgresql -p 5432:5432 -e POSTGRES_PASSWORD=Passw0rd -e POSTGRES_USERNAME=username -v /home/kiplink/volumes/postgre:/var/lib/postgresql/data postgres
docker run -d --name mongodb -p 27017:27017 -e MONGO_INITDB_ROOT_USERNAME= -e MONGO_INITDB_ROOT_PASSWORD= -v /root/app/volume/mongodb:/data/db mongo

# minio s3
docker run \
  -p 9000:9000 \
  -p 9001:9001 \
  --name minio1 \
  -v ~/minio/data:/data \
  -e "MINIO_ROOT_USER=AKIAIOSFODNN7EXAMPLE" \
  -e "MINIO_ROOT_PASSWORD=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY" \
  quay.io/minio/minio server /data --console-address ":9001"
  
# list container yang running
docker ps

# list semua container
docker ps -a

# portainer monitoring docker stand alone
docker run -d -p 8000:8000 -p 9443:9443 --name portainer --restart=always -v /var/run/docker.sock:/var/run/docker.sock -v volder_volume:/data portainer/portainer-ce:latest
